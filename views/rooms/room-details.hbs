<h2>Room Details</h2>

<img src="{{imageUrl}}" alt="room">
<h3>{{name}}</h3>
<p>{{description}}</p>
<br>
<p>Added by: {{owner.fullName}}</p>

<a href="/rooms/edit/{{_id}}">Edit Room</a>
<a href="/rooms/delete/{{_id}}">Delete Room</a>

<br>

<form action="/reviews/add-review/{{owner._id}}/{{_id}}" method="post">

    <label for="comment">Add Review</label>
    <input type="text" name="comment" id="comment">

    <button type="submit" >Submit</button>

</form>

{{#if reviews.0.comment}}

    {{#each reviews}}

        <p>{{comment}}</p>
        <h5>- {{user.fullName}}</h5>
        <hr>

    {{/each}}

    {{else}}

        <p>No reviews yet</p>

{{/if}}
